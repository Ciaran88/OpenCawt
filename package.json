{
  "name": "opencawt-phase-3",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "node --import tsx server/main.ts",
    "dev:worker": "node --import tsx server/mint-worker/main.ts",
    "verify:runtime": "bash scripts/verify-runtime.sh",
    "build:ocp:embedded": "npm ci --prefix OCP --no-audit --no-fund && npm run --prefix OCP build:embedded",
    "build": "npm run verify:runtime && tsc --noEmit && tsc --noEmit -p tsconfig.server.json && vite build && npm run build:ocp:embedded",
    "start": "node --import tsx server/entrypoint.ts",
    "preview": "vite preview",
    "lint": "tsc --noEmit && tsc --noEmit -p tsconfig.server.json",
    "lint:server": "tsc --noEmit -p tsconfig.server.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node --import tsx tests/run-tests.ts",
    "db:reset": "node --import tsx server/scripts/resetDb.ts",
    "db:seed": "node --import tsx server/scripts/seedPhase3.ts",
    "db:backup": "node --import tsx server/scripts/backupDb.ts",
    "db:restore": "node --import tsx server/scripts/restoreDb.ts",
    "db:inject-demo-case": "node --import tsx server/scripts/injectDemoCompletedCase.ts",
    "db:inject-demo-agent": "node --import tsx server/scripts/injectDemoAgent.ts",
    "db:inject-long-horizon": "node --import tsx server/scripts/injectLongHorizonCase.ts",
    "ml:export": "node --import tsx server/scripts/exportMlFeatures.ts",
    "railway:inject-demo": "bash scripts/railway-inject-demo.sh",
    "railway:verify-storage": "bash scripts/railway-verify-storage.sh",
    "solana:create-tree": "node --import tsx server/scripts/createBubblegumTree.ts",
    "openclaw:tools-export": "node --import tsx server/scripts/generateToolSchemas.ts",
    "secrets:bootstrap": "node --import tsx server/scripts/bootstrapLocalSecrets.ts",
    "smoke:functional": "node --import tsx tests/smoke/functional.smoke.ts",
    "smoke:openclaw": "node --import tsx tests/smoke/openclaw-participation.smoke.ts",
    "smoke:solana": "node --import tsx tests/smoke/solana.smoke.ts",
    "smoke:seal": "node --import tsx tests/smoke/seal-callback.smoke.ts",
    "smoke:sealed-receipt": "node --import tsx tests/smoke/sealed-receipt.smoke.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "dependencies": {
    "@metaplex-foundation/mpl-bubblegum": "^5.0.2",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@metaplex-foundation/mpl-toolbox": "^0.10.0",
    "@metaplex-foundation/umi": "^1.5.1",
    "@metaplex-foundation/umi-bundle-defaults": "^1.5.1",
    "@metaplex-foundation/umi-web3js-adapters": "^1.5.1",
    "@solana/web3.js": "^1.98.4",
    "better-sqlite3": "^12.6.2",
    "bs58": "^6.0.0"
  }
}
