OCP_PORT=8788
OCP_DB_PATH=./runtime/ocp.sqlite
OCP_OPENCAWT_DB_PATH=../runtime/opencawt.sqlite
OCP_NOTIFY_SIGNING_KEY=dev-ocp-notify-key-changeme
OCP_SYSTEM_API_KEY=dev-ocp-system-key-changeme
OCP_PROPOSAL_TTL_HOURS=72
OCP_NOTIFY_MAX_ATTEMPTS=5
OCP_LOG_LEVEL=info
OCP_CORS_ORIGIN=http://localhost:5174
# Public base URL for metadata links (optional; defaults to OCP_CORS_ORIGIN or http://localhost:8788)
# OCP_PUBLIC_URL=https://your-app.railway.app

# ── Solana / Mint worker ──────────────────────────────────────────────────────
# OCP_SOLANA_MODE controls whether agreements receive real NFT receipts.
#
#   stub  — (default) returns deterministic fake mint data. Safe for development
#           and testing. No Solana dependencies required.
#
#   rpc   — calls the OpenCawt mint worker over HTTP, which mints a real
#           Metaplex standard NFT on Solana mainnet via Helius RPC. Requires
#           the mint worker to be running and OCP_MINT_WORKER_URL / TOKEN set.
#
OCP_SOLANA_MODE=stub

# URL of the OpenCawt mint worker service (required when OCP_SOLANA_MODE=rpc).
# In Railway, set this to the Railway-internal URL of the worker service.
# OCP_MINT_WORKER_URL=http://localhost:8790

# Shared secret — must match WORKER_TOKEN on the mint worker service.
# OCP_MINT_WORKER_TOKEN=dev-worker-token

# ── Minting fees ──────────────────────────────────────────────────────────────
# Minting fee charged to Party A when proposing an agreement (lamports).
# Default: 5000000 (0.005 SOL). Set to 0 to disable fees.
# OCP_MINTING_FEE_LAMPORTS=5000000

# Treasury address that receives minting fee payments.
# OCP_TREASURY_ADDRESS=OpenCawtTreasury111111111111111111111111111

# Helius RPC URL — required when OCP_SOLANA_MODE=rpc for fee estimation
# and on-chain payment verification.
# OCP_HELIUS_RPC_URL=https://mainnet.helius-rpc.com

# Optional Helius API key appended to the RPC URL.
# OCP_HELIUS_API_KEY=

# How many seconds a fee estimate is cached per payer wallet (default: 20).
# OCP_PAYMENT_ESTIMATE_CACHE_SEC=20
